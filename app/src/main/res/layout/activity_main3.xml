            app:layout_constraintHorizontal_bias="0.309" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/button6"/>
    <Button
            android:text="Hacer Pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="379dp"
            android:id="@+id/button5" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"/>
    <Button
            android:text="Inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="148dp" android:id="@+id/button6" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>